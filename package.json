{
	"name": "particle-life",
	"version": "0.0.1",
	"description": "Game of Life with particles",
	"author": "Christian Petersen <chrs@cbp.io> (http://cbp.io)",
	"license": "MIT",
	"repository": "fnky/particle-life",
	"keywords": [
		"game",
		"particles",
		"canvas",
		"web"
	],
	"scripts": {
		"start": "canvas-sketch src/index.js --hot --open",
