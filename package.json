		"dat.gui": "^0.7.3",
		"prob.js": "^1.0.6",
		"random-js": "^1.0.8",
		"seedrandom": "^2.4.4"
	},
	"devDependencies": {
		"canvas-sketch-cli": "^1.11.9",
		"lint-staged": "^10.5.1",
		"prettier": "^2.1.2"
	},
	"lint-staged": {
		"*.{js,json,md}": [
			"prettier --write",
			"git add"
		]
	}
